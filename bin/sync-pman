#!/usr/bin/env bash

set -eo pipefail

ROOT_DIR="$(cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd)"
IMAGE_NAME="pman"

docker build -t "$IMAGE_NAME" .
docker run -ti -v "$ROOT_DIR":/host --entrypoint="/bin/bash" --rm "$IMAGE_NAME" \
    -c "(cd /usr/share/php/doc/pman && tar czf - .) | (cd /host && tar xzf -)"
